# Uygulama
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
LOG_LEVEL=debug
TZ=Europe/Istanbul

# Veritabanı (PostgreSQL)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cityguide
DB_SSL=false
# Alternatif tek satır bağlantı (varsa üsttekileri yok sayabilirsiniz)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/cityguide

# TypeORM
TYPEORM_SYNCHRONIZE=false
TYPEORM_LOGGING=true
TYPEORM_MIGRATIONS_RUN=true

# Önbellek / Rate limit (opsiyonel)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=60
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Yerelleştirme
DEFAULT_LOCALE=tr

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=/docs

# Güvenlik
JWT_SECRET=change-me
JWT_EXPIRES_IN=3600s
COOKIE_SECRET=change-me

# Plan servisi varsayılan hızlar (km/s)
DEFAULT_WALKING_SPEED_KMH=4.5
DEFAULT_PUBLIC_TRANSPORT_SPEED_KMH=22
DEFAULT_DRIVING_SPEED_KMH=35

# Harita sağlayıcıları (opsiyonel)
MAP_PROVIDER=none     # none|google|mapbox
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# Gözlemleme (opsiyonel)
SENTRY_DSN=
REQUEST_ID_HEADER=x-request-id

# Seed (opsiyonel)
SEED_ENABLED=false
